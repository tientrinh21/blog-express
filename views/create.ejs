<!DOCTYPE html>
<html lang="en">
	<%- include('layouts/header'); -%>
	<body>
		<%- include('layouts/navbar'); -%>
		<!-- Page Header-->
		<header class="masthead" style="background-image: url('/img/contact-bg.jpg')">
			<div class="container position-relative px-4 px-lg-5">
				<div class="row gx-4 gx-lg-5 justify-content-center">
					<div class="col-md-10 col-lg-8 col-xl-7">
						<div class="page-heading">
							<h1>Create New Post</h1>
							<span class="subheading">Have ideas? Feel free to share it.</span>
						</div>
					</div>
				</div>
			</div>
		</header>
		<!-- Main Content-->
		<main class="mb-4">
			<div class="container px-4 px-lg-5">
				<div class="row gx-4 gx-lg-5 justify-content-center">
					<div class="col-md-10 col-lg-8 col-xl-7">
						<p>Please fill all of the below</p>
						<div class="my-5">
							<form action="/posts/store" method="POST" enctype="multipart/form-data">
								<div class="form-floating">
									<input
										class="form-control"
										id="title"
										name="title"
										type="text"
										placeholder="Title"
									/>
									<label for="name">Title</label>
								</div>
								<div class="form-floating">
									<textarea class="form-control" id="body" name="body"></textarea>
									<script>
										$('#body').summernote({
											placeholder: 'Description',
											tabsize: 2,
											height: 300,
										})
									</script>
									<label for="body">Description</label>
								</div>
								<div class="form-floating mt-3">
									<div class="form-group floating-label-form-group controls">
										<label for="image">Image</label>
										<input
											type="file"
											class="form-control btn btn-sm mt-2 border"
											id="image"
											name="image"
										/>
									</div>
								</div>
								<br />

								<!-- Submit Button-->
								<button class="btn btn-primary text-uppercase" id="submitButton" type="submit">
									Send
								</button>
							</form>
						</div>
					</div>
				</div>
			</div>
		</main>
		<%- include('layouts/footer'); -%> <%- include('layouts/scripts'); -%>

		<script src="https://cdn.startbootstrap.com/sb-forms-latest.js"></script>
	</body>
</html>
